@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";

}
@model IEnumerable<StopItEF.Models.Link>
<!DOCTYPE html>
<html lang="en">
<body style="background-color: black">
    <div class="text-center">
        <h1 class="display-4" style="color:orangered;">Welcome to the home page!</h1>
        <hr />
        <br />
        <div>
            @foreach (var item in Model)
            {
                <partial name="_LinkTemplate" model="item" />
            }
        </div>
    </div>
    @if (ViewBag.AddMessage != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.AddMessage");
            };
        </script>
    }
</body>
</html>